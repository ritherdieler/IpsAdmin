<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.dscorp.ispadmin.presentation.ui.features.subscriptiondetail.SubscriptionDetailViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.firstNameField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.firstNameField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.firstNameField.editableLiveData}"
                        android:text="@={viewModel.editSubscriptionForm.firstNameField.liveData}" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.lastNameField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.lastNameField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.lastNameField.editableLiveData}"
                        android:text="@={viewModel.editSubscriptionForm.lastNameField.liveData}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.dniField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.dniField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDniSubscriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.dniField.editableLiveData}"
                        android:text="@={viewModel.editSubscriptionForm.dniField.liveData}"  />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.addressField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.addressField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddressSubscriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.addressField.editableLiveData}"
                        android:text="@={viewModel.editSubscriptionForm.addressField.liveData}" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.locationField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.locationField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.locationField.editableLiveData}"
                        app:location="@{viewModel.editSubscriptionForm.locationField.liveData}"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.phoneField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.phoneField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhoneSubscriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.phoneField.editableLiveData}"
                        android:text="@={viewModel.editSubscriptionForm.phoneField.liveData}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.placeField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.placeField.hint}"
                    tools:hint="Lugar"
                  >

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/etPlaceSubscriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.placeField.editableLiveData}"
                        app:places="@{viewModel.places}"
                        app:fieldToSaveSelection="@{viewModel.editSubscriptionForm.placeField}"
                        android:text="@{viewModel.editSubscriptionForm.placeField.liveData.name}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.ipField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.ipField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.ipField.editableLiveData}"
                        android:text="@={viewModel.editSubscriptionForm.ipField.liveData}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.planField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.planField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlanSubscriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.planField.editableLiveData}"
                        android:text="@{viewModel.editSubscriptionForm.planField.liveData.name.toString()}"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.technicianField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.technicianField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTechnicianSubscriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.technicianField.editableLiveData}"
                        android:text="@{viewModel.editSubscriptionForm.technicianField.liveData.toString()}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.subscriptionDateField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.subscriptionDateField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSubscriptionDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.subscriptionDateField.editableLiveData}"
                        android:text="@{viewModel.editSubscriptionForm.subscriptionDateField.liveData.toString()}" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@{viewModel.editSubscriptionForm.migrationField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etIsMigration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.migrationField.editableLiveData}"
                        android:text="@{viewModel.editSubscriptionForm.migrationField.liveData.toString()}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:error="@{viewModel.editSubscriptionForm.priceField.errorLiveData}"
                    android:hint="@{viewModel.editSubscriptionForm.priceField.hint}"
                    app:endIconMode="clear_text"
                    app:endIconTint="#6750A4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:focusablem="@{viewModel.editSubscriptionForm.priceField.editableLiveData}"
                        android:text="@{viewModel.editSubscriptionForm.priceField.liveData.toString()}" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <!--        fab-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabEditSubscriptionDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            app:icon="@{viewModel.editingIcon}"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="35dp"
            app:tint="#FFFFFF"
            android:onClick="@{() -> viewModel.makeFieldsEditable()}"
            android:contentDescription="@string/edit_subscription_data" />
    </RelativeLayout>


</layout>