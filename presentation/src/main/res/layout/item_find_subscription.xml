<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="subscription"
            type="com.example.cleanarchitecture.domain.domain.entity.SubscriptionResponse" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
           android:padding="12dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvPlanId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ID"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:layout_constraintBottom_toTopOf="@+id/tvName"
                app:layout_constraintEnd_toStartOf="@+id/tvSeePlanId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:layout_constraintBottom_toTopOf="@+id/tvName2"
                app:layout_constraintEnd_toEndOf="@+id/tvPlanId"
                app:layout_constraintStart_toStartOf="@+id/tvPlanId"
                app:layout_constraintTop_toBottomOf="@+id/tvPlanId" />


            <TextView
                android:id="@+id/tvSeePlanId"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@{subscription.id.toString()}"
                app:layout_constraintBottom_toBottomOf="@id/tvPlanId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPlanId"
                app:layout_constraintTop_toTopOf="@+id/tvPlanId"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="saul" />

            <TextView
                android:id="@+id/tvSeeFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{subscription.firstName + ' ' + subscription.lastName}"
                app:layout_constraintBottom_toBottomOf="@+id/tvName"
                app:layout_constraintEnd_toStartOf="@+id/btnMenu"
                app:layout_constraintStart_toStartOf="@+id/tvSeePlanId"
                app:layout_constraintTop_toTopOf="@+id/tvName"
                tools:text="renato" />

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="DNI"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvPlanId"
                app:layout_constraintStart_toStartOf="@+id/tvPlanId"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <TextView
                android:id="@+id/tvDni"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@{subscription.dni}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvSeePlanId"
                app:layout_constraintStart_toStartOf="@+id/tvSeePlanId"
                app:layout_constraintTop_toTopOf="@+id/tvName2"
                tools:text="renato" />

            <Button
                android:id="@+id/btnMenu"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                app:icon="@drawable/ic_more_dot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>