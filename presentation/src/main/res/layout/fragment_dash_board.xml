<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dashboardDataResponse"
            type="com.example.cleanarchitecture.domain.domain.entity.DashBoardDataResponse" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#E8DEF8"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_gross_revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{dashboardDataResponse.grossRevenueAsString()}"
                android:textSize="20sp"
                tools:text="Total Cases" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E8DEF8"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_total_to_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{dashboardDataResponse.totalToCollectAsString}"
                android:textSize="20sp"
                tools:text="Total Active Cases" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E8DEF8"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_total_raised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{dashboardDataResponse.totalRaisedAsString()}"
                android:textSize="20sp"
                tools:text="Total Deaths" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#E8DEF8"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_total_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{dashboardDataResponse.totalDiscountAsString}"
                android:textSize="20sp"
                tools:text="Total Recovered" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btnStartCut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="120dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#6750A4"
            android:text="Iniciar corte"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:cornerRadius="15dp"
            android:elevation="20dp"
            android:layout_marginBottom="30dp"
            app:iconPadding="10dp"
            app:iconSize="24dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</layout>