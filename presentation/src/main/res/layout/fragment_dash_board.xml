<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dashboardDataResponse"
            type="com.example.cleanarchitecture.domain.domain.entity.DashBoardDataResponse" />

        <variable
            name="viewModel"
            type="com.dscorp.ispadmin.presentation.ui.features.dashboard.DashBoardViewModel" />

        <import type="com.example.cleanarchitecture.domain.domain.entity.User.UserType" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="@{!viewModel.showDashBoardShimmerLiveData}"
            tools:visibility="visible">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/viewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/purple_claro_fondo"
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/tv_gross_revenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="@{dashboardDataResponse.grossRevenueAsString()}"
                        android:textSize="20sp"
                        tools:text="Total Cases" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/purple_claro_fondo"
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/tv_total_to_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="@{dashboardDataResponse.totalToCollectAsString}"
                        android:textSize="20sp"
                        tools:text="Total Active Cases" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/purple_claro_fondo"
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/tv_total_raised"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="@{dashboardDataResponse.totalRaisedAsString()}"
                        android:textSize="20sp"
                        tools:text="Total Deaths" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="@color/purple_claro_fondo"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/tv_total_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="@{dashboardDataResponse.totalDiscountAsString}"
                        android:textSize="20sp"
                        tools:text="Total Recovered" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="@color/purple_claro_fondo"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_fiber_installations"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@{dashboardDataResponse.installationResume.fiberResume}"
                            android:textSize="20sp"
                            tools:text="Total Recovered" />

                        <TextView
                            android:id="@+id/tv_wireless_installations"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@{dashboardDataResponse.installationResume.wirelessResume}"
                            android:textSize="20sp"
                            tools:text="Total Recovered" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView7"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="@color/purple_claro_fondo"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/tv_cancelled_subscriptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="@{dashboardDataResponse.canceledSubscriptionsAsString()}"
                        android:textSize="20sp"
                        tools:text="Total Recovered" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnStartCut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/purple_base_app"
                    android:elevation="20dp"
                    android:text="Iniciar corte"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="20dp"
                    app:iconPadding="10dp"
                    app:iconSize="24dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/shimmerDashBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="@{viewModel.showDashBoardShimmerLiveData}"
            tools:visibility="gone">

            <include layout="@layout/shimmer_dash_board" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</layout>